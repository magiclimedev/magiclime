# MagicLime Gateway Configuration
# Copy this file to .env and update with your values

# Application Mode (local or cloud)
MODE=local

# Server URLs
LOCAL_SERVER_URL=http://localhost:3000
CLOUD_SERVER_URL=https://magiclime.io

# Server timeouts (milliseconds)
SERVER_TIMEOUT=10000
SERVER_RETRY_TIMEOUT=5000

# Database
DATABASE_FILE=gateway.db
DB_CONNECTION_TIMEOUT=5000
DB_BUSY_TIMEOUT=5000

# Serial Port
SERIAL_BAUD_RATE=115200
SERIAL_AUTO_DETECT=true
# SERIAL_PORT_PATH=/dev/ttyUSB0
SERIAL_RECONNECT_DELAY=5000
SERIAL_MAX_RECONNECT_ATTEMPTS=10

# Queue Configuration
QUEUE_MAX_SIZE=1000
QUEUE_PROCESS_INTERVAL=100
QUEUE_RETRY_DELAY=30000
QUEUE_MAX_RETRIES=5
QUEUE_ITEM_TTL=3600000

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty
# LOG_FILE=logs/gateway.log
# LOG_MAX_FILE_SIZE=10m
# LOG_MAX_FILES=5

# Security
REQUIRE_AUTH=false
# API_KEY=your-api-key-here
# ALLOWED_ORIGINS=http://localhost:3000,https://magiclime.io

# Debug
DEBUG=false
DEBUG_SERIAL=false
MOCK_SENSORS=false